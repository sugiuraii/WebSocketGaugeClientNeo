    "scripts": {
        "build-full": "npm run build-depends; npm run build-all",
        "build-all": "npm-run-all --parallel build-WebSocketTester build-benchmark build-application build-partsTest build-index",
        "build-WebSocketTester": "cd src/WebSocketTester && npx webpack --progress=profile",
        "build-benchmark": "cd src/benchmark && npx webpack --progress=profile",
        "build-application": "cd src/application && npx webpack --progress=profile",
        "build-partsTest": "cd src/test/partsTest && npx webpack --progress=profile",
        "build-index": "cd src/index && npx webpack --progress=profile",
        "build-special-assettocorsa": "cd src/special/assettocorsaApp && npx webpack --progress=profile",
        "debug-watch-benchmark": "cd src/benchmark && npx webpack --watch --progress=profile",
        "debug-watch-application": "cd src/application && npx webpack --watch --progress=profile",
        "debug-watch-partsTest": "cd src/test/partsTest && npx webpack --watch --progress=profile",
        "build-depends": "npm run --workspaces build"
    },
    "workspaces": [
        "packages/*"
    ]
